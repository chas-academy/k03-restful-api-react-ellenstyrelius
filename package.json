{
  "name": "webshop",
  "version": "1.0.0",
  "description": "Webshop built with MERN stack",
  "main": "server/server.js",
  "scripts": {
    "server": "concurrently \"npm run server --prefix server\" \"npm run lint:watch --prefix server\"",
    "client": "npm start --prefix client",
    "start": "concurrently \"npm run server\" \"npm run client\" \"npm run prettier:watch\"",
    "install:all": "npm install --prefix server && npm install --prefix client",
    "lint:all": "npm run lint --prefix server -s && npm run lint --prefix client",
    "prettier": "prettier \"**/*.js\" \"**/*.css\" \"**/*.html\" \"**/*.json\" \"**/*.md\" --write",
    "prettier:watch": "watch 'npm run prettier' ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chas-academy/k03-restful-api-react-ellenstyrelius.git"
  },
  "author": "E Styr√©lius",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chas-academy/k03-restful-api-react-ellenstyrelius/issues"
  },
  "dependencies": {
    "concurrently": "^4.1.2"
  },
  "devDependencies": {
    "prettier": "1.18.2",
    "watch": "^1.0.2"
  },
  "prettier": {
    "singleQuote": true
  }
}
